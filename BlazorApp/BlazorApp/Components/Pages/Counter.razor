@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<!--<button class="btn btn-primary" @onclick=" () => currentCount += 4">Incrementa</button>--> <!--Usando expressão lambda para modificar o método-->
<button class="btn btn-primary" @onclick="IncrementCount">Incrementa</button>
<button class="btn btn-primary" @onclick="DecrementCount">Decrementa</button> 

<!--
@if (currentCount > 3)
{
    <p>Você ganhou!</p>
}-->

@code {
    private int currentCount = 0;

    [Parameter]
    public int IncrementAmount { get; set; } = 1;
    
    private void IncrementCount()
    {
        currentCount += IncrementAmount;
    }

    private void DecrementCount()
    {
        currentCount--;
    }
}
